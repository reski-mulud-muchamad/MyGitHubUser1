<resources xmlns:tools="http://schemas.android.com/tools">

    <color name="primaryColor">@color/white</color>
    <color name="primaryLightColor">#E1E1E1</color>
    <color name="primaryDarkColor">#000000</color>
    <color name="secondaryColor">#5c646d</color>
    <color name="secondaryLightColor">#34373d</color>
    <color name="secondaryDarkColor">#323a42</color>
    <color name="primaryTextColor">@color/black</color>
    <color name="secondaryTextColor">#252525</color>

    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>

    <!-- Base application theme. -->
    <style name="Theme.MyGitHubUser1" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryLightColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryLightColor</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/primaryColor</item>
        <item name="fontFamily">@font/segoe_ui</item>
    </style>

    <!-- splash screen -->
    <style name="SplashScreenStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:layout">@layout/activity_splash_screen</item>
        <item name="android:navigationBarColor">@color/primaryColor</item>
    </style>

</resources>